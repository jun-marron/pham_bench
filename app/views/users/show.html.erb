<% provide(:title, 'Users') %>
<body>
    <div class="row">
      <aside class="col-md-4 center">
        <section>
          <%= render 'shared/micropost_form'  %>
        </section>
      </aside>
    </div>
</body>
<div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>
