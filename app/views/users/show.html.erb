<% provide(:title, 'Users') %>
<div class="users_show">
<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
</div>
<div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>
